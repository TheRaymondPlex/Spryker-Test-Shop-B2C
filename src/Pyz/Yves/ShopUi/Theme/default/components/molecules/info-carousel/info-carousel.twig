{% extends model('component') %}

{% define config = {
    name: 'info-carousel'
} %}

{% define data = {
    info: required
} %}

{% block body %}
        <ul class="{{ config.name }}__table">
            {% for text in data.info %}
                <li class="{{ config.name }}__item">
                    {% include atom('icon') with {
                        modifiers: ['panel-info'],
                        data: {
                            name: 'check-additional'
                        }
                    } only %}
                    {{ text | trans }}
                </li>
            {% endfor %}
            <li class="{{ config.name }}__item">
                {% include atom('icon') with {
                    modifiers: ['panel-info'],
                    data: {
                        name: 'check-additional'
                    }
                } only %}
                {{ data.info | first | trans}}
            </li>
        </ul>
